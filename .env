# .env — Переменные окружения для free-rdp

# Путь к образу диска виртуальной машины
DISK_IMAGE=/var/lib/free-rdp/images/debian-bookworm.img

# Параметры виртуальной машины
CPUS=2
MEMORY=2048

# Порт RDP для проброса
RDP_PORT=3389

# noVNC параметры
NOVNC_LISTEN_PORT=6080
NOVNC_TARGET_HOST=localhost
NOVNC_TARGET_PORT=5901
NOVNC_WEB_PATH=/usr/share/novnc
XRDP_PORT=3389
NOVNC_PORT=6080

# ttyd (веб-терминал)
TTYD_PORT=7681

# Сетевая конфигурация
NETWORK_BRIDGE=user

# Логирование
LOG_FILE=/var/log/free-rdp/free-rdp.log
